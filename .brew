# Make sure we’re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils
echo "Don’t forget to add $(brew --prefix coreutils)/libexec/gnubin to \$PATH."

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils

# Install Bash 4
brew install bash

# Install wget with IRI support
brew install wget --enable-iri

# Install fix for proper clipboard paste support
brew install reattach-to-user-namespace

# Install version control systems
brew install git
brew install mercurial

# Install database systems
brew install redis
brew install sqlite

# Install the languages
brew install node
brew install python3
brew install python

# Install other useful binaries
brew install tmux
brew install ctags
brew install vim
brew install heroku-toolbelt

# Add global search
brew install the_silver_searcher

# Add colors to the terminal
brew install grc

# Add git ncurses gui for log view
brew install tig
brew install hub

# Install native apps
brew tap phinze/homebrew-cask
brew install brew-cask


function installcask() {
  if brew cask info "${@}" | grep "Not installed" > /dev/null; then
    brew cask install "${@}"
  else
    echo "${@} is already installed."
  fi
}

installcask alfred
installcask bartender
installcask colloquy
installcask dropbox
installcask evernote
installcask gfxcardstatus
installcask google-chrome
installcask instacast
installcask istat-menus
installcask iterm2
installcask path-finder
installcask postgres
installcask rdio
installcask sublime-text
installcask textmate2
installcask the-unarchiver
installcask vagrant
installcask virtualbox
